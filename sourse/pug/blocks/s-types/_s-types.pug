mixin s-types()
	// start s-types
	+b.SECTION.s-types.section#s-types&attributes(attributes)
		.container
			+b.section-title.text-center
				h2 
					strong.text-primary Производим шлакоблок для любых&nbsp;строений:  
					| 
					| жилых помещений, хозяйственных построек и&nbsp;заборов
				+e.text Чем меньше пустотность, тем выше прочность блока
			+e.block.lazy-background
				+e.row-wrap
					.row
						mixin item(i,t,p, pr)
							.col-sm-auto
								+e.item(data-bg=`img/@2x/s-type-${i}.png`)
									+e.head
										+e.title= t
										
										block
										if pr
											+e.price= pr
							// /.col-sm-auto
						+item("1",'Для коттеджей','',"30%")
							+e.text с пустотностью
						+item("2",'для бань, хозпостроек','','50%')
							+e.text с пустотностью
						+item("3",'Для заборов ','')
							+e.text изготавливаем
								br
								|  блоки с&nbsp;различной поверхностью
					+e.text-block.link-modal( data-src="#modal-know" href="javascript:;" )
						+icon("info") 
						span.link-tdu
							strong О чем нужно знать
							| 
							| при строительстве из&nbsp;шлакоблока
	// end s-types